<Page x:Class="Practice2025One.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Корзина"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ListView x:Name="CartItemsListView" 
                 Grid.Row="0"
                 SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Цена за единицу" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PriceAtMoment}" HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Количество" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="-" Width="30" Height="30" 
                                           Click="DecreaseQuantity_Click"
                                           Tag="{Binding CartItemID}"/>
                                    <TextBlock Text="{Binding Quantity}" 
                                              Width="40" 
                                              TextAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="5,0"/>
                                    <Button Content="+" Width="30" Height="30" 
                                           Click="IncreaseQuantity_Click"
                                           Tag="{Binding CartItemID}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Общая стоимость" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalPrice}" HorizontalAlignment="Right" FontWeight="Bold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Действие" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" 
                                       Click="RemoveItem_Click"
                                       Tag="{Binding CartItemID}"
                                       Background="#F44336"
                                       Foreground="White"
                                       Padding="10,5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <!-- Нижняя панель -->
        <Border Grid.Row="1" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          x:Name="TotalPriceTextBlock"
                          FontSize="18" FontWeight="Bold"
                          VerticalAlignment="Center"
                          Text="Итого: 0 руб."/>
                
                <Button Grid.Column="1" 
                       Content="Очистить корзину" 
                       Click="ClearCartButton_Click"
                       Padding="15,10" Margin="0,0,10,0"
                       Background="#FF9800"
                       Foreground="White"/>
                
                <Button Grid.Column="2" 
                       Content="Оформить заказ" 
                       Click="CreateOrderButton_Click"
                       Padding="15,10"
                       Background="#4CAF50"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Page>
