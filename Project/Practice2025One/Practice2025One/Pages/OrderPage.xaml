<Page x:Class="Practice2025One.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Оформление заказа"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Товары в заказе:" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <ListView x:Name="OrderItemsListView" 
                         Margin="0,0,0,20">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" Width="250" DisplayMemberBinding="{Binding ProductName}"/>
                            <GridViewColumn Header="Количество" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Цена за единицу" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PriceAtMoment}" HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Общая стоимость" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalPrice}" HorizontalAlignment="Right" FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                
                <TextBlock Text="Адрес доставки:" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>
                <TextBox x:Name="DeliveryAddressTextBox" 
                        Padding="10" FontSize="14"
                        MinHeight="80" 
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        Margin="0,0,0,20"/>
                
                <TextBlock x:Name="TotalPriceTextBlock" 
                          FontSize="20" FontWeight="Bold"
                          Margin="0,10,0,20"/>
            </StackPanel>
        </ScrollViewer>
        
        <Border Grid.Row="1" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" 
                       Content="Отмена" 
                       Click="CancelButton_Click"
                       Padding="15,10" Margin="0,0,10,0"
                       Background="#9E9E9E"
                       Foreground="White"/>
                
                <Button Grid.Column="2" 
                       Content="Подтвердить заказ" 
                       Click="ConfirmOrderButton_Click"
                       Padding="15,10"
                       Background="#4CAF50"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Page>
