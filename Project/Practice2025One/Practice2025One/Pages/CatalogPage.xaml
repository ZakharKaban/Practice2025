<Page x:Class="Practice2025One.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Каталог товаров"
      Loaded="Page_Loaded">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Панель фильтров и поиска -->
        <Border Grid.Row="0" Background="White" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchTextBox" 
                        Grid.Column="0"
                        Padding="10" FontSize="14"
                        TextChanged="SearchTextBox_TextChanged"
                        Margin="0,0,10,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="#F5F5F5" CornerRadius="5" Padding="10">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <ComboBox x:Name="SupplierFilterComboBox" 
                         Grid.Column="1"
                         Width="200" Padding="10"
                         SelectionChanged="FilterChanged"
                         Margin="0,0,10,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <ComboBox x:Name="SortComboBox" 
                         Grid.Column="2"
                         Width="150" Padding="10"
                         SelectionChanged="SortComboBox_SelectionChanged"
                         Margin="0,0,10,0">
                    <ComboBoxItem Content="По названию" Tag="Name"/>
                    <ComboBoxItem Content="По цене (возр.)" Tag="PriceAsc"/>
                    <ComboBoxItem Content="По цене (убыв.)" Tag="PriceDesc"/>
                    <ComboBoxItem Content="По поставщику" Tag="Supplier"/>
                </ComboBox>
                
                <Button Content="Сбросить фильтры" 
                       Grid.Column="3"
                       Click="ResetFiltersButton_Click"
                       Padding="10,5"/>
            </Grid>
        </Border>
        
        <!-- ListView с товарами -->
        <ListView x:Name="ProductsListView" 
          Grid.Row="1"
          SelectionMode="Single"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Изображение" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImageSource}"
                               Width="80" Height="80"
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Название" Width="200"
                            DisplayMemberBinding="{Binding Name}"/>

                    <GridViewColumn Header="Описание" Width="250"
                            DisplayMemberBinding="{Binding Description}"/>

                    <GridViewColumn Header="Цена" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FormattedPrice}"
                                       FontWeight="Bold"/>
                                    <TextBlock Text="{Binding FormattedOldPrice}"
                                       TextDecorations="Strikethrough"
                                       Foreground="Gray"
                                       Margin="5,0,0,0"
                                       Visibility="{Binding HasDiscount,
                                       Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Скидка" Width="80"
                            DisplayMemberBinding="{Binding DiscountText}"/>

                    <GridViewColumn Header="Характеристики" Width="200"
                            DisplayMemberBinding="{Binding Characteristics}"/>

                    <GridViewColumn Header="Поставщик" Width="150"
                            DisplayMemberBinding="{Binding SupplierName}"/>

                    <GridViewColumn Header="Действие" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="В корзину"
                                Click="AddToCartButton_Click"
                                Tag="{Binding ProductID}"
                                Padding="10,5"
                                Background="#4CAF50"
                                Foreground="White"
                                Cursor="Hand"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <!-- ВАЖНО: стиль ВНУТРИ ListView -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpensive}" Value="True">
                            <Setter Property="Background" Value="#FFF3E0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>

    </Grid>
</Page>

