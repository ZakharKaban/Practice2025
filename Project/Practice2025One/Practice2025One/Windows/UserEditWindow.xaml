<Window x:Class="Practice2025One.Windows.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование пользователя" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="ФИО:" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" Padding="10" Margin="0,0,0,15"/>
            
            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Padding="10" Margin="0,0,0,15"/>
            
            <TextBlock Text="Телефон:" Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneTextBox" Padding="10" Margin="0,0,0,15"/>
            
            <TextBlock Text="Пароль (оставьте пустым, чтобы не менять):" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Padding="10" Margin="0,0,0,15"/>
            
            <CheckBox x:Name="IsActiveCheckBox" Content="Пользователь активен" Margin="0,0,0,15"/>
            
            <TextBlock x:Name="ErrorTextBlock" 
                      Foreground="Red" 
                      TextWrapping="Wrap"
                      Margin="0,10,0,0"
                      Visibility="Collapsed"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" 
                   Click="CancelButton_Click"
                   Padding="15,10" Margin="0,0,10,0"
                   Width="120"/>
            <Button Content="Сохранить" 
                   Click="SaveButton_Click"
                   Padding="15,10"
                   Background="#4CAF50"
                   Foreground="White"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>

