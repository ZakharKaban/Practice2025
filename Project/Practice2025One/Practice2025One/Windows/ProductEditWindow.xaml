<Window x:Class="Practice2025One.Windows.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование товара" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Название:" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" Padding="10" Margin="0,0,0,15"/>
                
                <TextBlock Text="Описание:" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" Padding="10" 
                        MinHeight="80" TextWrapping="Wrap"
                        AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                        Margin="0,0,0,15"/>
                
                <TextBlock Text="Цена:" Margin="0,0,0,5"/>
                <TextBox x:Name="PriceTextBox" Padding="10" Margin="0,0,0,15"/>
                
                <TextBlock Text="Старая цена (опционально):" Margin="0,0,0,5"/>
                <TextBox x:Name="OldPriceTextBox" Padding="10" Margin="0,0,0,15"/>
                
                <TextBlock Text="Процент скидки (опционально):" Margin="0,0,0,5"/>
                <TextBox x:Name="DiscountPercentTextBox" Padding="10" Margin="0,0,0,15"/>
                
                <TextBlock Text="Характеристики:" Margin="0,0,0,5"/>
                <TextBox x:Name="CharacteristicsTextBox" Padding="10" 
                        MinHeight="60" TextWrapping="Wrap"
                        AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                        Margin="0,0,0,15"/>
                
                <TextBlock Text="Поставщик:" Margin="0,0,0,5"/>
                <ComboBox x:Name="SupplierComboBox" Padding="10" Margin="0,0,0,15">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <TextBlock Text="Изображение:" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ImagePathTextBox" Padding="10" IsReadOnly="True" Grid.Column="0" Margin="0,0,10,0"/>
                    <Button Content="Выбрать..." Grid.Column="1" 
                           Click="SelectImageButton_Click"
                           Padding="15,10"/>
                </Grid>
                <Image x:Name="ProductImage" Height="150" Margin="0,0,0,15" 
                      Stretch="UniformToFill" HorizontalAlignment="Left"/>
                
                <CheckBox x:Name="IsActiveCheckBox" Content="Товар активен" Margin="0,0,0,15"/>
                
                <TextBlock x:Name="ErrorTextBlock" 
                          Foreground="Red" 
                          TextWrapping="Wrap"
                          Margin="0,10,0,0"
                          Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" 
                   Click="CancelButton_Click"
                   Padding="15,10" Margin="0,0,10,0"
                   Width="120"/>
            <Button Content="Сохранить" 
                   Click="SaveButton_Click"
                   Padding="15,10"
                   Background="#4CAF50"
                   Foreground="White"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>

