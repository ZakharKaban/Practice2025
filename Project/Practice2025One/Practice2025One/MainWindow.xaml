<Window x:Class="Practice2025One.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice2025One"
        mc:Ignorable="d"
        Title="OptStroy Sistem" 
        MinHeight="700" MinWidth="1445"
        Height="700" Width="1458"
        WindowStartupLocation="CenterScreen" Icon="/nail.jpg"
  >

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="#2196F3" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип/иконка (появляется при малых размерах) -->
                <TextBlock x:Name="LogoShortText" Grid.Column="0" Text="OS" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"
                          Margin="0,0,10,0"
                          Visibility="Collapsed"/>

                <!-- Основной заголовок -->
                <TextBlock Grid.Column="1" Text="OptStroy Sistem" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          TextTrimming="CharacterEllipsis"/>

                <!-- Панель пользователя -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <TextBlock x:Name="UserInfoText" Text="Гость" 
                              Foreground="White" VerticalAlignment="Center" 
                              Margin="0,0,15,0"
                              TextTrimming="CharacterEllipsis"
                              MinWidth="60"
                              ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>

                    <Button x:Name="LogoutButton" Content="Выход" 
                           Click="LogoutButton_Click" 
                           Visibility="Collapsed"
                           Padding="10,5"
                           MinWidth="60"
                           ToolTip="Выход из системы"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Адаптивная ширина меню -->
                <ColumnDefinition x:Name="MenuColumn" Width="200" MinWidth="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Разделитель меню 
            <GridSplitter Grid.Column="1" Width="5" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"
                         Background="LightGray"
                         ShowsPreview="True"/> -->

            <!-- Меню навигации -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0"
                   Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <ListBox x:Name="NavigationMenu" 
                            SelectionChanged="NavigationMenu_SelectionChanged"
                            Background="Transparent"
                            BorderThickness="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="15,10"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Setter Property="Foreground" Value="#1565C0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <!-- Пример элементов меню -->
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏠" Margin="0,0,10,0"/>
                                <TextBlock Text="Главная" 
                                          TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" Margin="0,0,10,0"/>
                                <TextBlock Text="Товары" 
                                          TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" Margin="0,0,10,0"/>
                                <TextBlock Text="Отчеты" 
                                          TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </ScrollViewer>
            </Border>

            <!-- Frame для страниц -->
            <Border Grid.Column="2" Background="#F5F5F5">
                <Frame x:Name="MainFrame" 
                      NavigationUIVisibility="Hidden"
                      Loaded="MainFrame_Loaded"/>
            </Border>
        </Grid>

        
    </Grid>
</Window>