<Window x:Class="BarberShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BarberShop - Главная" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Профиль">
                <MenuItem Header="Личный кабинет" Click="Menu_Profile_Click"/>
                <MenuItem Header="Выход" Click="Menu_Logout_Click"/>
            </MenuItem>
            <MenuItem Header="Каталог">
                <MenuItem Header="Услуги" Click="Menu_Services_Click"/>
                <MenuItem Header="Корзина" Click="Menu_Cart_Click"/>
                <MenuItem Header="Мои заказы" Click="Menu_Orders_Click"/>
            </MenuItem>
            <MenuItem Header="Управление" x:Name="menuManagement" Visibility="Collapsed">
                <MenuItem Header="Все таблицы (CRUD)" Click="Menu_Management_AllTables_Click"/>
                <MenuItem Header="Пользователи и роли" x:Name="menuUsers" Visibility="Collapsed" Click="Menu_Management_Users_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="txtWelcome"
                       FontSize="16"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </DockPanel>
</Window>
