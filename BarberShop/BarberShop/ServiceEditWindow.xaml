<Window x:Class="BarberShop.ServiceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование услуги" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Тип услуги:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbType" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" DisplayMemberPath="TypeName"/>

            <TextBlock Text="Описание:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Top"/>
            <TextBox x:Name="txtDescription" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"
                     AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>

            <TextBlock Text="Длительность (мин):" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtDuration" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Цена:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPrice" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"/>

            <CheckBox x:Name="chkIsActive" Grid.Row="5" Grid.Column="1" Content="Активна" Margin="0,0,0,0"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock x:Name="txtError" Foreground="Red" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="Сохранить" Width="100" Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button Content="Отмена" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>


