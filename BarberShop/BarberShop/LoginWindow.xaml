<Window x:Class="BarberShop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BarberShop - Вход" Height="400" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="BarberShop" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Вход в систему" FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Email или телефон:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox x:Name="txtLogin" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" />

            <TextBlock Text="Пароль:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <PasswordBox x:Name="txtPassword" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock x:Name="txtError"
                       Grid.Row="2"
                       Grid.ColumnSpan="2"
                       Foreground="Red"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnLogin" Content="Войти" Width="100" Margin="0,0,10,0" Click="btnLogin_Click"/>
            <Button x:Name="btnRegister" Content="Регистрация" Width="110" Click="btnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>


