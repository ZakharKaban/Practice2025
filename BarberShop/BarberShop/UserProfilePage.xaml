<Page x:Class="BarberShop.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFirstName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPhone" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Роль:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtRole" Grid.Row="4" Grid.Column="1" IsReadOnly="True"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="txtError" Foreground="Red" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="Сохранить" Width="120" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Page>


