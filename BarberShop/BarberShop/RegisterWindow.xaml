<Window x:Class="BarberShop.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BarberShop - Регистрация" Height="520" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Регистрация пользователя"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFirstName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Фамилия:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Телефон:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPhone" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Пароль:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <PasswordBox x:Name="txtPassword" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock Text="Повтор пароля:" Grid.Row="5" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <PasswordBox x:Name="txtPasswordRepeat" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"/>

                <TextBlock x:Name="txtError"
                           Grid.Row="6"
                           Grid.ColumnSpan="2"
                           Foreground="Red"
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Зарегистрировать" Width="150" Margin="0,0,10,0" Click="btnRegister_Click"/>
                <Button Content="Отмена" Width="100" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>


