<Page x:Class="BarberShop.OrdersHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="История заказов">
    <Grid Margin="0,10,0,0">
        <DataGrid x:Name="dgOrders"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding ServiceName}" Width="*"/>
                <DataGridTextColumn Header="Дата покупки" Binding="{Binding PurchaseDate}" Width="160"/>
                <DataGridTextColumn Header="Дата записи" Binding="{Binding AppointmentDateTime}" Width="160"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding ActualPrice}" Width="100"/>
                <DataGridTextColumn Header="Оплата" Binding="{Binding PaymentMethod}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding PaymentStatus}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>


