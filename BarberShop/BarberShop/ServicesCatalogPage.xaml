<Page x:Class="BarberShop.ServicesCatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Каталог услуг">
    <Page.Resources>
        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Page.Resources>
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearch" Width="180" Margin="0,0,10,0" TextChanged="Filter_Changed"/>

            <TextBlock Text="Тип услуги:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cbServiceType" Width="160" SelectionChanged="Filter_Changed" Margin="0,0,10,0"/>

            <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cbSort" Width="160" SelectionChanged="Filter_Changed">
                <ComboBoxItem Content="По названию (А-Я)" Tag="NameAsc"/>
                <ComboBoxItem Content="По названию (Я-А)" Tag="NameDesc"/>
                <ComboBoxItem Content="По цене (дешевые сначала)" Tag="PriceAsc"/>
                <ComboBoxItem Content="По цене (дорогие сначала)" Tag="PriceDesc"/>
            </ComboBox>
        </StackPanel>

        <DataGrid x:Name="dgServices"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Price}" Value="1000">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding ServiceName}" Width="*"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding ServiceTypeName}" Width="150"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Длительность (мин)" Binding="{Binding Duration}" Width="120"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"
                                     ElementStyle="{StaticResource RightAlignedCellStyle}"/>
                <DataGridTemplateColumn Header="Действия" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="В корзину" Padding="6,2"
                                    Click="AddToCart_Click"
                                    IsEnabled="{Binding IsActive}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAddService" Content="Добавить услугу" Margin="0,0,10,0"
                    Click="btnAddService_Click" Visibility="Collapsed"/>
            <Button x:Name="btnEditService" Content="Редактировать услугу" Margin="0,0,10,0"
                    Click="btnEditService_Click" Visibility="Collapsed"/>
            <Button x:Name="btnDeleteService" Content="Удалить услугу"
                    Click="btnDeleteService_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>


